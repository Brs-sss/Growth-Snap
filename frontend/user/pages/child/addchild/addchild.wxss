.family{
  display: flex;
  align-items: center;
}

.input_text {
  width: 80vw;
  height: 20vh;
  padding: 10rpx;
  border: 1rpx solid rgba(220, 220, 220, 0.5);
  border-radius: 4rpx;
  font-size: 14px;
}


.container_4 {
  grid-area: "D";
  font-size: 14px;
}

.container_tag{
  display: flex;
  flex-wrap: wrap;
  align-items: center; /* 标签垂直居中对齐 */
  gap: 8px; /* 标签之间的间距 */
}

.tag {
  height: 15px;
  padding: 4px 8px;
  border-radius: 4px;
  background: #f0f8ff;
  border: 1rpx solid #4095E5;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  color: #4095E5;
  cursor: pointer;
}

.tag.selected {
  background-color: #007bff;
  color: #fff;
}

.tag .tag-text {
  /* margin-bottom: 3px; */
  font-size: 14px;
}

.checkbox-container {
  margin-left: 4px;
}

.add-tag {
  display: flex;
  height: 15px;
  align-items: center;
  padding: 4px 8px;
  margin-right: 8px;
  border-radius: 4px;
  border: 1rpx solid #007bff65;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  color: #007bff65;
  cursor: pointer;
}

.add-tag .add-icon {
  font-size: 16px;
  margin-right: 4px;
}

.add-tag .add-text {
  font-size: 14px;
}

.tag-input {
  margin-left: -70px;
  font-size: 12px;
  width: 70px;
  border-radius: 4px;
  border: 1px solid #007bff65;
  color: #007bff65;
  background-color: #fff;
  padding-left: 6px;
}

.container_5 {
  grid-area: "E";
  width: 100%;
  justify-self: center;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* 垂直底部对齐 */
  align-items: center; /* 水平居中 */
}

#button-box{
    width: 50vw;
    height: 10vh;
}

.submit{

  position: relative;
  left: 0px;
  bottom: 15px;
  /* margin-left: 100px; */
  margin-top: 30px;

  width: 100%;
  height: 80rpx;
  background-color: #4095E5;
  color: #fff;
  border-radius: 100px;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  font-size: 14px;
}


