.image-grid-item{
  /* border: 1px solid #000; */
  border: 1px solid rgba(0, 0, 0, 0);
  position: relative;
  width: 25vw;
  height:25vw; /*设置高度宽度相等*/
  margin-left: 13%;
  margin-bottom: 3vh;

}

.image-grid-item image{
  display: inline;
  object-fit: cover;
  max-width: 100%;
  height: auto;
}

.add-image-butn{
  background-color: #eee;
  font-size: 3em;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}



.image_delete{
  position: absolute;
  top: 0; /* 调整顶部位置 */
  left: 0; /* 调整左侧位置 */
  width: 5vw;
  height: 5vw;
}

.image_delete image{
  width: 100%;
  height: 100%;
}

.image_delete_icon{
  width: 10px;
  height: 5px;
}

